<% if (site.posts.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title"><%= __('recent_posts') %></h3>
    <div class="widget">
      <ul>
        <% site.posts.sort('date', -1).limit(6).each(function(post){ %>
          <li class="clearfix recent-posts">
            <% if (post.photos != ""){ %>
              <div class="widget-entry-thumbnail">
                <a href="<%- url_for(post.path) %>" title="<% post.title %>"><img width="120" height="90" src="<%= post.photos[0] %>" class="attachment-thumb-small size-thumb-small wp-post-image" alt="preview-16" title="<% post.title %>"></a>
              </div>
              <div class="widget-entry-summary">
            <% } else { %>
              <div class="widget-entry-summary" style="margin: 0;">
            <% } %>
              <h4 style="margin: 0;"><a href="<%- url_for(post.path) %>"><%= post.title || '(no title)' %></a></h6>
              <span class="recent-posts-date"><%= date(post.date, 'MMMM D, YYYY') %></span>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
<% } %>